<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#2F5570"
    >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="45dp"
        android:layout_height="65dp"
        android:layout_weight="1"
        app:srcCompat="@drawable/icon_voice" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="5"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        >
        <TextView
            android:id="@+id/item_voice_list_fileName"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="2022_06_02_21.mp4"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时长 : "
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/item_voice_list_fileInfo_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:10"
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="大小 : "
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/item_voice_list_fileInfo_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50kb"
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dp"
                android:text="格式 : "
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
            <TextView
                android:id="@+id/item_voice_list_fileInfo_format"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="mp4"
                android:textColor="#D5D5D5"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:id="@+id/item_voice_list_todo"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="25dp"
        android:textStyle="bold"
        android:text="· · ·"
        android:textColor="#D5D5D5"
        android:textSize="20dp" />

</LinearLayout>